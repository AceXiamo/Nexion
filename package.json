{
  "name": "Nexion",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Next-Gen Web3 SSH Manager",
  "author": "AceXiamo <xiamo@qwq.link>",
  "scripts": {
    "dev": "vite",
    "dev:testnet": "cross-env BUILD_NETWORK=testnet vite",
    "dev:mainnet": "cross-env BUILD_NETWORK=mainnet vite",
    "build": "vite build && electron-builder",
    "build:testnet": "cross-env BUILD_NETWORK=testnet vite build && electron-builder",
    "build:mainnet": "cross-env BUILD_NETWORK=mainnet vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@iconify/react": "^6.0.0",
    "@iconify/tailwind": "^1.2.0",
    "@noble/ciphers": "^2.0.0",
    "@noble/hashes": "^2.0.0",
    "@noble/secp256k1": "^3.0.0",
    "@tanstack/react-query": "^5.85.5",
    "@types/qrcode": "^1.5.5",
    "@wagmi/connectors": "^5.9.5",
    "@walletconnect/ethereum-provider": "^2.21.8",
    "@walletconnect/universal-provider": "^2.21.8",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "cross-env": "^10.0.0",
    "date-fns": "^4.1.0",
    "electron-store": "^10.1.0",
    "fflate": "^0.8.2",
    "framer-motion": "^12.23.12",
    "fs-extra": "^11.3.1",
    "i18next": "^25.4.2",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.541.0",
    "node-pty": "^1.0.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^15.7.3",
    "react-router-dom": "^7.8.2",
    "ssh2": "^1.17.0",
    "ssh2-sftp-client": "^12.0.1",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.35.1",
    "wagmi": "^2.16.5",
    "zod": "^3.22.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/ssh2": "^1.15.5",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.nexion.app",
    "productName": "Nexion",
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/app-icon.png",
      "publisherName": "Nexion",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/app-icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/app-icon.png",
      "category": "Utility",
      "synopsis": "Nexion Application",
      "desktop": {
        "Name": "Nexion",
        "Comment": "Nexion Desktop Application",
        "Categories": "Utility;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nexion"
    },
    "dmg": {
      "title": "Nexion ${version}",
      "icon": "public/app-icon.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
